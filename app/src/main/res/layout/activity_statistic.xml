<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intro"
    android:id="@+id/statistic"
    >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F6F7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/analysisPeriod"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:id="@+id/startText"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_marginRight="10dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="입력"
                android:background="#3E454C"
                android:textColor="#fff"
                android:id="@+id/startPeriod"
                android:textSize="20dp"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="50dp"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/endText"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_weight="2"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="입력"
                android:textColor="#fff"
                android:background="#3E454C"
                android:id="@+id/endPeriod"
                android:textSize="20dp"
                android:layout_weight="3"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/analysisBtn"
                android:background="#FF7F66"
                android:textColor="#fff"
                android:textSize="20dp"
                android:text="분석"/>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/analysisPeriod"
            android:id="@+id/chartFrag">
        </FrameLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/drawer">
    </FrameLayout>

    <include layout="@layout/drawer_right"/>

</android.support.v4.widget.DrawerLayout>
