<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/totalBox"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:background="#a55">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_total_money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="00000원"/>

        </RelativeLayout>
        <!--
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@id/totalBox"
            android:background="#5a5">
            listview, resetBtn
        </RelativeLayout>
    -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/menuListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@id/totalBox"
            android:background="#5a5" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/payBtn"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/order_pay"/>
        <LinearLayout
            android:id="@+id/category_box"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_above="@id/payBtn"
            android:orientation="vertical"
            android:background="#a00">

            <Button
                android:id="@+id/catBtn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="category1"/>
            <Button
                android:id="@+id/catBtn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="category2"/>
            <Button
                android:id="@+id/catBtn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="category3"/>
            <Button
                android:id="@+id/catBtn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="category4"/>
            <Button
                android:id="@+id/catBtn5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="category5"/>
            <Button
                android:id="@+id/catBtn6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="category6"/>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/bottom_box"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/payBtn"
            android:layout_alignParentBottom="true"
            android:background="#0a0">

        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/menuBtnListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/category_box"
            android:layout_alignParentTop="true"
            android:layout_above="@id/bottom_box"
            android:background="#00a" />

    </RelativeLayout>

</LinearLayout>